{
  "name": "Chatsworthy",
  "version": "1.0.0",
  "description": "A web app that allows Users to chat with business owners",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint",
    "lint": "run-p lint:*",
    "lint:html": "htmlhint ./**/*.html",
    "lint:css": "stylelint ./**/*.css",
    "lint:js": "eslint ./**/*.js",
    "precommit": "npm test",
    "bundle": "browserify client/index.js -t babelify -o server/public/main.js",
    "watch:client": "watchify client/index.js -vd -o server/public/main.js -t babelify",
    "start": "node server/index.js",
    "watch:server": "nodemon ./server/index.js",
    "watch": "run-p watch:client watch:server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Stevenlee731/Chatsworthy.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Stevenlee731/Chatsworthy/issues"
  },
  "homepage": "https://github.com/Stevenlee731/Chatsworthy#readme",
  "devDependencies": {
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "eslint": "3.16.1",
    "eslint-config-standard": "6.2.1",
    "eslint-plugin-promise": "3.4.2",
    "eslint-plugin-react": "6.10.0",
    "eslint-plugin-standard": "2.0.1",
    "htmlhint": "0.9.13",
    "husky": "0.13.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "4.0.2",
    "stylelint": "7.9.0",
    "stylelint-config-standard": "16.0.0",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "express": "^4.15.2",
    "material-ui": "^0.18.0",
    "moment": "^2.18.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "semantic-ui-react": "^0.68.3",
    "socket.io": "^2.0.1"
  }
}
